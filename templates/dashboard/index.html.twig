{% extends 'base.html.twig' %}

{% block title %}DASHBOARD{% endblock %}

{% block body %}

<body>

    <style>
        body{
            background-color: #1D1D1D;
        }
    </style>

    <div class="dashboard">
        <div class="left-side">
            <div class="left-side_fixed">
            <div class="dashboard-name">

                    <img class="histoires__card-img" src="/images/man-user.png">

                <h3>{{ user.nom }}</h3>
            </div>
            <div class="link">
                <ul>
                    <li>
                        <a href="">Mes histoires</a>
                    </li>
                    <li>
                        <a href="{{ path('histoire_new') }}">Cr√©er une histoire</a>
                    </li>

                </ul>
            </div>
            <div class="deconnexion">
                <div>
                    <img src="/images/logout.svg" alt="deconnexion">
                    <a href="{{ path('app_logout') }}">Deconnexion</a>
                </div>
            </div>
        </div>
        </div>
        <div class="dashboard-content">
            <h3>Mes histoires </h3>

            <div class="dashboard-content_histoires">
            <div class="histoires__cards">

                {% for histoire in histoires %}
                <div class="histoires__card">

                    {% if histoire.photo is defined %}
                        <a href ={{ path('histoire_show', {'id': histoire.id}) }}><img class="histoires__card-img" src="{{ base_url }}{{ histoire.photoWebPath }}"></a>
                    {% endif %}

                        <div class="histoires__card-menu">

                            <div class="toggle">
                                <a href="#menu" id="toggle"><span></span></a>

                                <div id="menu">
                                  <ul>
                                    <li class="menu-opt">
                                        <img src="/images/edit.svg" alt="">
                                        <a href="{{ path('histoire_edit', {id: histoire.id}) }}">Modifier</a>
                                    </li>
                                    <li class="menu-opt">
                                        <img src="/images/close.svg" alt="">
                                        <a href="{{ path('histoire_delete', {id: histoire.id}) }}">Supprimer</a>
                                    </li>
                                  </ul>
                                </div>

                            </div>
                        </div>
                        <div class="histoires__card-content">
                            <p class="histoires__card-p">Histoire</p>
                            <a src="" class="histoires__card-title">{{ histoire.pitch }}</a>
                            <div class="histoires__card-infos">
                                    <span class="histoires__card-author">{{ histoire.user }}</span>
                                 <span class="histoires__card-genre">{{ histoire.genre }}</span>
                            </div>
                        </div>
                </div>
                {% endfor %}
            </div>

            </div>
            </div>
    </div>


</html>
{% endblock %}
