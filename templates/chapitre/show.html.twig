{% extends 'base.html.twig' %}

{% block body %}
    <body>
    <header>
        <img class="active" src="/images/logoBlack.svg" alt="Logo Base 11/19">
    </header>

    <div class="chapitre">
        <div class="chapitre__grid">

            {% if chapitre.photo is defined %}




            <div class="chapitre__illustration" style="background-image:url({{ base_url }}{{ chapitre.photoWebPath }})" ></div>

            {% endif %}
            <div class="chapitre__content">

                <p class="chapitre__number">{{ chapitre.titrecourt }} </p>
                <h1 class="chapitre__title">{{ chapitre.titre }}</h1>

            </div>
        </div>

    </div>

    <div class="chapitre chapitre__bg">
        <div class="chapitre__p">
            <p>{{ chapitre.texte }}</p>
        </div>

        {% if chapitre.question is not null %}
            <h2 class="chapitre__question">{{ chapitre.question }}</h2>
            <div class="chapitre__btns">
                {% for fils in chapitre.getOrigines() %}
                    <a href="{{ path('chapitre_show', {'id' : fils.getChapitreDestination.id}) }}" class="chapitre_btn">{{ fils.getReponse() }}</a>
                {% endfor %}
            </div>
        {% else %}
            <a href="{{ path('histoire_show', { 'id' :chapitre.histoire.id}) }}"><div class="chapitre__title" style="color: #fff;">FIN</div></a>

        {% endif %}
    </div>


    </div>
    <footer class="footer__flex">
        <div class="footer__links">
            <a href=""> Accueil</a>
            <a href=""> Histoires</a>
            <a href=""> Modifier informations</a>
            <a href=""> A propos</a>
        </div>
        <p>Airdrop 2019</p>
    </footer>


    </body>
{% endblock %}
