{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

<div>
    {% if app.session.flashBag.has('success')  %}
        <div class="form-group col-md-6">
            {% for message in app.flashes('success') %}

                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor%}
        </div>
        <div class="form-group col-md-6"></div>
    {% endif %}
</div>

    <h1> Les histoires </h1>


    <div class="row flex">
        {% for histoire in histoires %}

            <div class="col-sm d-flex">

                <div class="card card-body flex-fill">




                    <h2 class="card-title">
                        {{ histoire.titre }}
                    </h2>
                    <p class="card-text"> {{ histoire.pitch }} </p>
                    <p class="card-text"> <img src="https://bathboxoffice.org.uk/wp-content/uploads/2017/10/the-octet-logo-mall-2.jpg"></p>
                    <div class="text-primary" style="font-weight: bold;font-size:2rem"> {{ histoire.actif ? 'Actif' : 'Non actif' }}  </div>




                    {{ form_start(formAvis) }}
                    <small> Je recommande </small>

                    {{ form_row(formAvis.positif) }}

                    <div class="mt-4 text-center">
                        <button id="review_submit"  class="red_button message_submit_btn trans_300"  > Envoyer</button>
                    </div>
                </div>

            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
