{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

<div>
    {% if app.session.flashBag.has('success')  %}
        <div class="form-group col-md-6">
            {% for message in app.flashes('success') %}

                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor%}
        </div>
        <div class="form-group col-md-6"></div>
    {% endif %}
</div>

    <h1>Hello {{ controller_name }}! ✅</h1>

    <p>C'est la page générale du site,</p>
    <br />
    <p>on doit y voir les histoires.</p>


    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ 'src/Controller/VisualisationController.php'|file_link(0) }}">src/Controller/VisualisationController.php</a></code></li>
        <li>Your template at <code><a href="{{ 'templates/visualisation/index.html.twig'|file_link(0) }}">templates/visualisation/index.html.twig</a></code></li>
    </ul>
</div>
{% endblock %}
